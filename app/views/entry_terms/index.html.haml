- title((_(current_controller_gettext_human_name_pluralized)))
.standard_box
  = render :partial => "common/actions/for_form_index"
  %h2= yield(:title)
  %table
    %tr
      %th.small= _("Name")
      %th.small= _("Code")
      %th.small= _("Start date")
      %th.small= _("End date")
      %th.small= _("Is default")
      %th.small= _("Is enabled")
      %th
    = render :partial => "entry_term", :collection => @entry_terms  
  = render :partial => "common/actions/for_form_index"
  %div.pagination= will_paginate @entry_terms