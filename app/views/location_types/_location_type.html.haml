%tr[location_type]{:class => cycle("even","odd")}
  %td=h location_type.name
  %td=h location_type.vcard_name
  %td=h location_type.description
  %td=h location_type.is_default ? _('Yes') : _('No')
  %td=h location_type.is_enabled ? _('Yes') : _('No')
  %td= render :partial => "common/actions/for_row_index_no_show", :locals => { :local => location_type }