- if @total == 0
  .no_data{:style=>"text-align:center;"}= _("No %s Found") % current_controller_gettext_human_name_pluralized
- else
  %table
    %tr
      %th{ :class => (sort_th_class_helper "name") }
        = sort_link_helper _("Name"), "name"  
      %th{ :class => (sort_th_class_helper "mailing_mixin_type_id") }
        = sort_link_helper _("Type"), "mailing_mixin_type_id"  
      %th{ :class => (sort_th_class_helper "subject") }
        = sort_link_helper _("Subject"), "subject"    
      %th{ :class => (sort_th_class_helper "text") }
        = sort_link_helper _("Text"), "text"  
      %th{ :class => (sort_th_class_helper "is_default") }
        = sort_link_helper _("Default"), "is_default"  
      %th{ :class => (sort_th_class_helper "is_enabled") }
        = sort_link_helper _("Enabled"), "is_enabled"  
      %th 
    - @mailing_mixins.each do |mailing_mixin|
      %tr{:class => cycle("even","odd")}
        %td=h mailing_mixin.name 
        %td=h mailing_mixin.mailing_mixin_type.name 
        %td=h mailing_mixin.subject 
        %td=h mailing_mixin.text 
        %td=h mailing_mixin.is_default ? _('Yes') : _('No') 
        %td=h mailing_mixin.is_enabled ? _('Yes') : _('No')      
        %td= render :partial => "common/actions/for_row_index_no_show_no_destroy", :locals => { :local => mailing_mixin }
  - if @mailing_mixins_pages.page_count > 1
    %div.pagination
      = pagination_links_remote @mailing_mixins_pages