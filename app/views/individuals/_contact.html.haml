%label{:for => "contact_name_prefix_id", :class => "w10 inputselect"}
  %span.wrapper
    %span.title
      = _("Prefix") 
    = text_field_with_auto_complete :presenter, :contact_name_prefix_name, { :class => "field" }, { :url => formatted_lookup_name_prefixes_path(:js), :method => :get, :skip_style => true, :with => "'search=' + element.value" }
%label{:for => "contact_last_name", :class => "w30 inputselect mandatory"}
  %span.wrapper 
    %span.title
      = _("Last Name")
    = form.text_field :contact_last_name, :class => "field"
%label{:for => "contact_first_name", :class => "w30 inputselect mandatory"}
  %span.wrapper 
    %span.title
      = _("First Name")
    = form.text_field :contact_first_name, :class => "field"
%label{:for => "contact_middle_name", :class => "w20 inputselect"}
  %span.wrapper 
    %span.title
      = _("Middle Name")
    = form.text_field :contact_middle_name, :class => "field"    
%label{:for => "contact_name_suffix_id", :class => "w10 inputselect"}
  %span.wrapper 
    %span.title
      = _("Suffix") 
    = text_field_with_auto_complete :presenter, :contact_name_suffix_name, { :class => "field" }, { :url => formatted_lookup_name_suffixes_path(:js), :method => :get, :skip_style => true, :with => "'search=' + element.value" }                 
.clear

%label{:for => "contact_source_id", :class => "w25 inputselect"}
  %span.wrapper 
    %span.title
      = _("Source")
      %span{:class => "example"}= _("primary")
    = text_field_with_auto_complete :presenter, :contact_source_name, { :class => "field" }, { :url => formatted_lookup_sources_path(:js), :method => :get, :skip_style => true, :with => "'search=' + element.value" }
%label{:for => "contact_nick_name", :class => "w25 inputselect"}
  %span.wrapper 
    %span.title
      = _("Nick Name")
    = form.text_field :contact_nick_name, :class => "field"
%label{:for => "contact_job_title", :class => "w25 inputselect"}
  %span.wrapper 
    %span.title
      = _("Job Title")
    = form.text_field :contact_job_title, :class => "field"
