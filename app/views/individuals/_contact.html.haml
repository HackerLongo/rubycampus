%label{:for => "contact_external_identifier", :class => "w25 inputselect"}
  %span.wrapper 
    %span.title
      = _("External Identifier")
    = form.text_field :contact_external_identifier, :class => "field"  
.clear

%label{:for => "contact_homepage_path", :class => "w50 inputselect"}
  %span.wrapper 
    %span.title
      = _("Homepage")
      %span{:class => "example"}= "https://rubycampus.org"
    = form.text_field :contact_homepage_url, :class => "field"  
%label{:for => "contact_greeting_id", :class => "w50 inputselect"}
  %span.wrapper 
    %span.title
      = _("Greeting")
    = form.select(:contact_greeting_id, Greeting::NAMES_KEYS, :class => "field")  
.clear

