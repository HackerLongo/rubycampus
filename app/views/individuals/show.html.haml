- title((_("Viewing %s") % current_controller_human_name))
- @individual = @individual_presenter
.individual_box
  .hako
    - form_for @individual_presenter, :url => individual_url, :html => { :multipart => true, :method => :put, :class => "hakozaki" } do |form|
      = render :partial => "contacts/actions/for_form_show"
      %h1= "#{@individual.contact_last_name}, #{@individual.contact_first_name}"
      %hr/ 
      = render :partial => "form", :locals => {:form => form}
      = render :partial => "contacts/actions/for_form_show"
