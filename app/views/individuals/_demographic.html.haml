%h2= _("Demographic Information")
%label{:for => "contact_gender_id", :class => "w25 inputselect"}
  %span.wrapper
    = label_with_lookup :controller => :gender
    = text_field_with_auto_complete :presenter, :contact_gender_name, { :class => "field" }, { :url => formatted_lookup_genders_path(:js), :method => :get, :skip_style => true, :with => "'search=' + element.value" }
%label{:for => "contact_date_of_birth", :class => "w25 inputselect"}
  %span.wrapper
    %span.title= _("Date of Birth")
    = form.calendar_date_select :contact_date_of_birth, :popup => :force , :valid_date_check => "date < (new Date()).stripTime()", :class => "field"    
