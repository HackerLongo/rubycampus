- if @total == 0
  .no_data{:style=>"text-align:center;"}= _("No %s Found") % current_controller_gettext_human_name_pluralized
- else
  %table
    %tr
      %th{ :class => (sort_th_class_helper "name") }
        = sort_link_helper _("Name"), "name"
      %th{ :class => (sort_th_class_helper "is_default") }
        = sort_link_helper _("Is Default"), "is_default"
      %th{ :class => (sort_th_class_helper "is_enabled") }
        = sort_link_helper _("Is Enabled"), "is_enabled"
      %th
    - @phone_types.each do |phone_type|
      %tr{:class => cycle("even","odd")}
        %td=h phone_type.name
        %td=h phone_type.is_default ? _('Yes') : _('No')
        %td=h phone_type.is_enabled ? _('Yes') : _('No')
        %td= render :partial => "common/actions/for_row_index_no_show", :locals => { :local => phone_type }
  - if @phone_types_pages.page_count > 1
    %div.pagination
      = pagination_links_remote @phone_types_pages