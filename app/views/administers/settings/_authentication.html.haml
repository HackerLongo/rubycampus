- form_tag({:action => 'edit'}, :class => "hakozaki", :autocomplete => :off ) do
  %h2= I18n.t("{{value}} Settings", :default => "{{value}} Settings", :value => I18n.t("Central Authentication Service (CAS)", :default => "Central Authentication Service (CAS)"))
  = context_help(I18n.t("RubyCampus can use CAS developed by Yale University to provide a secure single sign on solution. The user logs in to your organization's CAS server, and is automatically authenticated for RubyCampus.", :default => "RubyCampus can use CAS developed by Yale University to provide a secure single sign on solution. The user logs in to your organization's CAS server, and is automatically authenticated for RubyCampus."))
  = label_for_setting :setting => :central_authentication_service_enabled, :input_type => :radiocheck, :width => "w50"
  = label_for_setting :setting => :cas_base_url, :width => "w50"
  .clear 
  %hr/
  = render :partial => "common/actions/for_form_button_save"