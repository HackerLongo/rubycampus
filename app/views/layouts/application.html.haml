!!!
%html{ :lang => "en" }
  %head
    %title
      = h(RubyCampus.site_name + " - " + (yield(:title) || RubyCampus.site_title_default))
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "content-type" }/
    %meta{ :name => "description", :content => Rubycampus::Info::name }/
    %meta{ :name => "keywords", :content => Rubycampus::Info::keywords }/
    = stylesheet_link_tag 'rubycampus/screen', :media => 'screen, projection'
    = stylesheet_link_tag 'rubycampus/print', :media => 'print'
    =# stylesheet_link_tag 'jquery/jquery.ui.autocomplete'
    /
      [if IE]>
      <link rel="stylesheet" href="/stylesheets/rubycampus/ie.css" type="text/css" media="screen, projection">
      <![endif]
    = javascript_include_tag :defaults #, 'jquery/jquery.min', 'jquery/jquery.dimensions', 'jquery/jquery.templating', 'jquery/jquery.ui.autocomplete.ext', 'jquery/jquery.ui.autocomplete', :cache => 'jquery'
    = calendar_date_select_includes RubyCampus.domain_gui_calender_theme
  %body{ :class => body_tag_classes.join(' ') }
    %div{:class => "container%s" % (' showgrid' if SHOWGRID == true)}
      .span-11{:style => "text-align:left;"}
        = link_to image_tag("rubycampus/logo.png"), home_path # %h3= RubyCampus.site_name
      .span-13.last
        %h4{:style => "text-align:right;"}
          - if logged_in?
            = _("Welcome %{current_user}") % {:current_user => content_tag(:strong,(link_to h(current_user.login.titlecase), user_path(current_user)))}
            |
            = link_to _('Profile'), edit_user_path(current_user)
            - if current_user.has_role?('administrator')
              = link_to _('Administer'), users_path
            = link_to _('Logout'), logout_path
            = link_to_help
        = render :partial => "layouts/search"
      %hr/
      = render :partial => "layouts/flash_message"
      .span-4#sidebar
        = display_sidebar # yield :sidebar
      .span-20.last#content{:style => "background-color:#fcfcfc;border-style:solid;"}
        = yield
      .span-24#footer{:align => "middle"}
        = Rubycampus::Info::impressum