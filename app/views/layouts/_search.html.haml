.search
  <!–[if IE]>
  .search_background_IE
    <![endif]–>   
    - form_tag contacts_path, :method => :get do
      %input.search_field{ :name => "search", :type => "text", :value => params[:search] }/
      .search_background
        = submit_tag nil, {:name => "contact_type", :type => "hidden", :value => params[:contact_type]} unless !params[:contact_type] 
        = submit_tag nil, {:name => "stage", :type => "hidden", :value => params[:stage]} unless !params[:stage] 
      %input.search_button{ :type => "image", :src => "images/rubycampus/search_box_button.png", :value => "Search" }/
    <!–[if IE]>
  <![endif]–>                              