- title((_("Editing %s") % current_controller_gettext_human_name))
= error_messages_for :status  
.standard_box
  .hako
    - form_for @status, :url => status_path, :html => { :method => :put, :class => "hakozaki" } do |form|     
      = render :partial => "common/actions/for_form_edit"
      %h1= yield(:title)
      %hr/
      = render :partial => "form", :locals => {:form => form}
      = render :partial => "common/actions/for_form_edit"
