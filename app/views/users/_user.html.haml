%tr{:class => cycle('odd', 'even')} 
  %td= h user.login
  %td= h user.email
  %td
    = user.enabled ? _('Yes') : _('No')
    - unless user == current_user
      - if user.enabled
        = link_to(_('disable'), user_path(user.id), :method => :delete)
      - else
        = link_to(_('enable'), enable_user_path(user.id), :method => :put)
  %td= link_to _('edit roles'), user_roles_path(user)