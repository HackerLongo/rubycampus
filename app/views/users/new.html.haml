- title(I18n.t("New User", :default => "New User"),"login") 
= error_messages_for :user 
- @user.password = @user.password_confirmation = nil
.standard_box
  .hako
    - form_for :user, :url => users_path, :html => { :class => "hakozaki", :autocomplete => :off } do |form|
      .buttons
        %button{:type => "submit", :class => "positive"}
          = I18n.t("Create User", :default => "Create User")
      %h1= yield(:title)      
      = render :partial => "form", :locals => {:form => form}