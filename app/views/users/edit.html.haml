= error_messages_for :user
.standard_box
  .hako 
    - form_for :user, :url => user_path(@user), :html => { :method => :put, :class => "hakozaki" } do |f|
      .buttons
        %button{:type => "submit", :class => "positive"}
          = _("Save")
        = link_to _('Change Password'), change_password_path
        = link_to _('Show Profile'), user_path(@user)
      %h2= _("Edit Your Account")
      %hr/      
      %label{:for => "user_email", :class => "w50 inputselect mandatory"}
        %span.wrapper
          %span.title= _("Email Address")
          = f.text_field :email, :class => "field"
      %label{:for => "contact_time_zone", :class => "w50 inputselect"}
        %span.wrapper
          %span.title= _("Time Zone")
          = f.time_zone_select :time_zone, TimeZone.us_zones, {:class => "field"}   
      .clear
      
      %label{:for => "name", :class => "w50 inputselect mandatory"}
        %span.wrapper
          %span.title= _("Display Name")
          = f.text_field :name, :class => "field"
      %label{:for => "language", :class => "w50 inputselect"}
        %span.wrapper
          %span.title= _("Display Language")          
          = f.select :language, language_options_for_select, :class => "field"
      .clear