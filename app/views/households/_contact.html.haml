%h2= _("Contact Information")
%label{:for => "contact_household_name", :class => "w25 inputselect mandatory"}
  %span.wrapper
    %span.title= _("Household Name")
    = form.text_field :contact_household_name, :class => "field"

%label{:for => "contact_source_id", :class => "w25 inputselect"}
  %span.wrapper
    %span.title= _("Source")
    = text_field_with_auto_complete :household_presenter, :contact_source_name, { :class => "field" }, { :url => formatted_lookup_sources_path(:js), :method => :get, :skip_style => true, :with => "'search=' + element.value" }

%label{:for => "contact_nick_name", :class => "w25 inputselect"}
  %span.wrapper
    %span.title= _("Nick Name")
    = form.text_field :contact_nick_name, :class => "field"

%label{:for => "contact_external_identifier", :class => "w25 inputselect"}
  %span.wrapper
    %span.title= _("External Identifier")
    = form.text_field :contact_external_identifier, :class => "field"
.clear        

%hr/

