%h2= _("Mailing Address")
%label{:for => "address_location_type_id", :class => "w25 inputselect"}
  %span.wrapper
    %span.title= _("Location")
    = form.select(:address_location_type_id, LocationType::NAMES_KEYS, :class => "field")  
%label{:for => "address_is_primary", :class => "w25 inputselect"}
  %span.wrapper
    %br/
    = form.check_box :address_is_primary, :class => "select"
    %span.title= _("Is Primary")
%label{:for => "address_is_billing", :class => "w25 inputselect"}
  %span.wrapper
    %br/
    = form.check_box :address_is_billing, :class => "select"
    %span.title= _("Is Billing") 
.clear

%label{:for => "address_country_id", :class => "w25 inputselect"}
  %span.wrapper
    %span.title= _("Country")
    = text_field_with_auto_complete :individual_presenter, :address_country_name, { :class => "field" }, { :url => formatted_lookup_countries_path(:js), :method => :get, :skip_style => true, :with => "'search=' + element.value" }     
    %em= _("Type in the first few letters of the country and then select from the drop-down or press tab if the desired item is selected. After selecting a country, the State / Province field provides a choice of states or provinces in that country.") 
%label{:for => "address_region_id", :class => "w25 inputselect"}
  %span.wrapper
    %span.title= _("Region")
    = text_field_with_auto_complete :individual_presenter, :address_region_name, { :class => "field" }, { :url => formatted_lookup_regions_path(:js), :method => :get, :skip_style => true, :with => "'search=' + element.value" }     
    %em= _("State, Province or Prefecture")
%label{:for => "address_locality", :class => "w25 inputselect"}
  %span.wrapper
    %span.title= _("Locality")
    = form.text_field :address_locality, :class => "field"
    %em= _("City or Locality")   
.clear

%label{:for => "address_line_1", :class => "w25 inputselect"}
  %span.wrapper
    %span.title= _("Line 1")
    = form.text_field :address_line_1, :class => "field"
    %em= _("Street number, street name, apartment/unit/suite - OR P.O. box")    
%label{:for => "address_line_2", :class => "w25 inputselect"}
  %span.wrapper
    %span.title= _("Line 2")
    = form.text_field :address_line_2, :class => "field" 
    %em= _("Supplemental address info, e.g. c/o, department name, building name, etc.")
%label{:for => "address_postal_code", :class => "w25 inputselect"}
  %span.wrapper
    %span.title= _("Postal code")
    = form.text_field :address_postal_code, :class => "field"
    %em= _("Zip or Postal Code")   
.clear

%hr/ 