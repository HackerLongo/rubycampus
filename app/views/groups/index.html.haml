- title((_(current_controller_gettext_human_name_pluralized)))
.standard_box
  = render :partial => "common/actions/for_form_index"
  %h2= yield(:title)
  %hr/
  %table
    %tr      
      %th.small= _("Name")
      %th.small= _("Title")
      %th.small= _("Description")
      %th.small= _("Saved Search")
      %th.small= _("Is Enabled")
      %th.small= _("Where Clause")
      %th.small= _("Select Tables")
      %th.small= _("Where Tables")
      %th.small= _("Group Type")
      %th
    = render :partial => "group", :collection => @groups  
  = render :partial => "common/actions/for_form_index"
  = content_tag :div, _("No entries found"), :style => "text-align: center;" if @groups.empty?
  %div.pagination= will_paginate @groups